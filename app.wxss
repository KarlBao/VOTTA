/**app.wxss**/
.container {
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 14px;
}
.button {
  width: 100%;
  height: 45px;
  color: #fff;
  background-color: #d02f5d;
}
.title {
  margin-bottom: 30rpx;
  display:block;
  font-size: 28px;
  font-weight: bold;
}
.description {
  color: #666;
}
.room-info {
  min-height: 200rpx;
}
.join-info {
  margin-top: 30rpx;
  border-top: 1px solid #ccc;
  padding: 20px 0;
}
.circle {
  border-radius: 50%;
}
.join-user {
  margin: 20px auto;
}
.join-user .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: inline-block;
  vertical-align: middle;
}
.join-user .name {
  display: inline-block;
  vertical-align: middle;
  margin-left: 30rpx;
}
